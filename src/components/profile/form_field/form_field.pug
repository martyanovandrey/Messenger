block variables
  -var no_border = 'no_border'

mixin form(typeValid, field_name, labelFor, field_placeholder, style)
  if (style === no_border)
    .form__field.form-space-between(style='border: none;')
      +form_input(typeValid, field_name, labelFor, field_placeholder)
  else
    .form__field.form-space-between
      +form_input(typeValid, field_name, labelFor, field_placeholder)

mixin form_input(typeValid, field_name, labelFor, field_placeholder)
      span.form__field-name= field_name
      span
        input.textinput-profile.right(type= typeValid placeholder= field_placeholder name= labelFor)
        label.registration__invalid